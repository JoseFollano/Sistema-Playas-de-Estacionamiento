<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="sistemaPlaya.Pages.VerVehiculosPage"
             Title="Ver Vehículos">
    <VerticalStackLayout Padding="16" Spacing="12">
        <!-- Filtros de fecha y botones -->
        <HorizontalStackLayout Spacing="8" VerticalOptions="Start">
            <Label Text="Inicio:" VerticalOptions="Center" />
            <DatePicker x:Name="FechaInicioPicker" />
            <Label Text="Fin:" VerticalOptions="Center" />
            <DatePicker x:Name="FechaFinPicker" />
            <Button Text="Buscar" x:Name="BuscarButton" Clicked="OnBuscarClicked" />
            <Button Text="Exportar" x:Name="ExportarButton" Clicked="OnExportarClicked" />
        </HorizontalStackLayout>

        <!-- Encabezado de la tabla -->
        <Grid ColumnDefinitions="80,100,*,160,220,100" RowDefinitions="Auto" Padding="0,8,0,0" BackgroundColor="#ECECEC">
            <Label Text="Código" FontAttributes="Bold" Grid.Column="0" HorizontalTextAlignment="Center" />
            <Label Text="Placa" FontAttributes="Bold" Grid.Column="1" HorizontalTextAlignment="Center" />
            <Label Text="Vehículo" FontAttributes="Bold" Grid.Column="2" HorizontalTextAlignment="Center" />
            <Label Text="Fecha de Entrada" FontAttributes="Bold" Grid.Column="3" HorizontalTextAlignment="Center" />
            <Label Text="Fecha y Hora Salida" FontAttributes="Bold" Grid.Column="4" HorizontalTextAlignment="Center" />
            <Label Text="Total" FontAttributes="Bold" Grid.Column="5" HorizontalTextAlignment="Center" />
        </Grid>

        <!-- Filas de la tabla -->
        <CollectionView x:Name="VehiculosCollectionView" ItemsSource="{Binding Vehiculos}" SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="0,2" Padding="0" HasShadow="False" BorderColor="#D0D0D0" CornerRadius="6" BackgroundColor="White">
                        <Grid ColumnDefinitions="80,100,*,160,220,100" Padding="0,6" ColumnSpacing="8">
                            <Label Text="{Binding Codigo}" Grid.Column="0" VerticalOptions="Center" HorizontalTextAlignment="Center" FontSize="14" />
                            <Label Text="{Binding Placa}" Grid.Column="1" VerticalOptions="Center" HorizontalTextAlignment="Center" FontSize="14" />
                            <Label Text="{Binding Vehiculo}" Grid.Column="2" VerticalOptions="Center" FontSize="14" />
                            <Label Text="{Binding FechaHoraEntrada, StringFormat='{0:dd/MM/yyyy HH:mm}'}" Grid.Column="3" VerticalOptions="Center" FontSize="14" />
                            <Label Text="{Binding FechaHoraSalida, StringFormat='{0:dd/MM/yyyy HH:mm}'}" Grid.Column="4" VerticalOptions="Center" FontSize="14" />
                            <Label Text="{Binding Total, StringFormat='S/. {0:F2}'}" Grid.Column="5" VerticalOptions="Center" HorizontalOptions="End" FontAttributes="Bold" TextColor="#388E3C" FontSize="14" />
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>