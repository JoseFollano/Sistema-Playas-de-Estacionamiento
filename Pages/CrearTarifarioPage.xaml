<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="sistemaPlaya.CrearTarifarioPage"
             Title="Crear Tarifario">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">
            <Label x:Name="TituloLabel"
                   Text="Nuevo Tarifario"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="{StaticResource Primary}"/>

            <Frame HasShadow="True" CornerRadius="10" Padding="15">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Datos del Tarifario" 
                           FontSize="18" 
                           FontAttributes="Bold" 
                           TextColor="{StaticResource Gray900}"/>

                    <Label Text="Nombre del Vehículo:" FontSize="16" TextColor="{StaticResource Gray900}"/>
                    <Entry x:Name="NombreEntry"
                           Placeholder="Ingrese el nombre del vehículo"/>

                    <Label Text="Hora (Precio por hora S/):" FontSize="16" TextColor="{StaticResource Gray900}"/>
                    <Entry x:Name="HoraEntry"
                           Placeholder="Ej: 5.00"
                           Keyboard="Numeric"/>

                    <Label Text="Incremento:" FontSize="16" TextColor="{StaticResource Gray900}"/>
                    <Entry x:Name="IncrementoEntry"
                           Placeholder="Ej: 0"
                           Keyboard="Numeric"/>

                    <Label Text="Noche:" FontSize="16" TextColor="{StaticResource Gray900}"/>
                    <Entry x:Name="NocheEntry"
                           Placeholder="Ej: 0"
                           Keyboard="Numeric"/>

                    <BoxView HeightRequest="1" Color="{StaticResource Gray300}" Margin="0,10"/>

                    <VerticalStackLayout Spacing="10">
                        <Label Text="Opciones de Cobranza:" 
                               FontSize="16" 
                               FontAttributes="Bold" 
                               TextColor="{StaticResource Gray900}"/>

                        <HorizontalStackLayout Spacing="10">
                            <CheckBox x:Name="CobranzaDiaCheckBox" />
                            <Label Text="Cobranza por Día" 
                                   VerticalOptions="Center"
                                   FontSize="16" 
                                   TextColor="{StaticResource Gray900}"/>
                        </HorizontalStackLayout>

                        <HorizontalStackLayout Spacing="10">
                            <CheckBox x:Name="CobranzaNocheCheckBox" />
                            <Label Text="Cobranza Noche" 
                                   VerticalOptions="Center"
                                   FontSize="16" 
                                   TextColor="{StaticResource Gray900}"/>
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Frame>

            <!-- Botones de acción -->
            <Grid ColumnDefinitions="*,*" ColumnSpacing="15">
                <Button Grid.Column="0" 
                        Text="Cancelar" 
                        Clicked="OnCancelarClicked"
                        BackgroundColor="{StaticResource Red}" 
                        TextColor="White" 
                        CornerRadius="10" 
                        HeightRequest="50"/>

                <Button Grid.Column="1" 
                        x:Name="GuardarButton"
                        Text="Guardar" 
                        Clicked="OnGuardarClicked"
                        BackgroundColor="{StaticResource Primary}" 
                        TextColor="White" 
                        CornerRadius="10" 
                        HeightRequest="50"/>
            </Grid>

            <ActivityIndicator x:Name="LoadingIndicator" 
                               IsRunning="False" 
                               IsVisible="False" 
                               Color="{StaticResource Primary}" 
                               HorizontalOptions="Center"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>