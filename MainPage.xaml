<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="sistemaPlaya.MainPage"
             Title="Principal - Playa de Estacionamiento">

    <Grid RowDefinitions="Auto, Auto, *, Auto" ColumnDefinitions="*" Padding="20">
        <VerticalStackLayout Grid.Row="0" HorizontalOptions="CenterAndExpand" Margin="0,20,0,30">
            <Label Text="¡Bienvenido/a!"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="{StaticResource Primary}"/>
            <Label x:Name="UserNameLabel"
                   Text="[Nombre del Usuario]"
                   FontSize="20"
                   HorizontalOptions="Center"
                   Margin="0,5,0,0"
                   TextColor="{StaticResource Gray700}"/>
            <Label x:Name="CurrentDateLabel"
                   Text="[Fecha Actual]"
                   FontSize="16"
                   HorizontalOptions="Center"
                   Margin="0,10,0,0"
                   TextColor="{StaticResource Gray700}"/>

            <!-- Información de la caja abierta -->
            <Label x:Name="CajaAbiertaInfoLabel"
                   Text="Caja: Cerrada"
                   FontSize="16"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Margin="0,15,0,0"
                   TextColor="{StaticResource Accent}"/>

            <!-- Información de estacionamientos - ALINEADO HORIZONTALMENTE -->
            <HorizontalStackLayout Spacing="25" HorizontalOptions="Center" Margin="0,20,0,0">
                <VerticalStackLayout>
                    <Label Text="Total:" 
                           FontSize="16" 
                           FontAttributes="Bold" 
                           HorizontalOptions="Center"
                           TextColor="{StaticResource Gray900}"/>
                    <Label x:Name="TotalEstacionamientosLabel" 
                           Text="0" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           TextColor="{StaticResource Gray900}"/>
                </VerticalStackLayout>

                <VerticalStackLayout>
                    <Label Text="Ocupados:" 
                           FontSize="16" 
                           FontAttributes="Bold" 
                           HorizontalOptions="Center"
                           TextColor="{StaticResource Red}"/>
                    <Label x:Name="OcupadosLabel" 
                           Text="0" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           TextColor="{StaticResource Red}"/>
                </VerticalStackLayout>

                <VerticalStackLayout>
                    <Label Text="Disponibles:" 
                           FontSize="16" 
                           FontAttributes="Bold" 
                           HorizontalOptions="Center"
                           TextColor="{StaticResource Green}"/>
                    <Label x:Name="DisponiblesLabel" 
                           Text="0" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           TextColor="{StaticResource Green}"/>
                </VerticalStackLayout>
            </HorizontalStackLayout>
        </VerticalStackLayout>

        <BoxView Grid.Row="1" HeightRequest="1" Color="{StaticResource Gray200}" Margin="0,0,0,30" />

        <VerticalStackLayout Grid.Row="2" Spacing="15" VerticalOptions="StartAndExpand">
            <!-- Primera fila: Aperturar Caja - Cerrar Caja -->
            <Grid ColumnDefinitions="*,*" RowDefinitions="Auto" ColumnSpacing="15" RowSpacing="15">
                <Button x:Name="btnAperturarCaja" Grid.Row="0" Grid.Column="0" Text="Aperturar Caja" Clicked="OnAperturarCajaClicked"
                        BackgroundColor="{StaticResource Secondary}" TextColor="White" CornerRadius="10" HeightRequest="60"/>
                <Button x:Name="btnCerrarCaja" Grid.Row="0" Grid.Column="1" Text="Cerrar Caja" Clicked="OnCerrarCajaClicked"
                        BackgroundColor="{StaticResource Tertiary}" TextColor="White" CornerRadius="10" HeightRequest="60"/>
            </Grid>

            <!-- Segunda fila: Entrada Vehículo - Mantenimiento -->
            <Grid ColumnDefinitions="*,*" RowDefinitions="Auto" ColumnSpacing="15" RowSpacing="15">
                <Button x:Name="btnEntradaVehiculo" Grid.Row="0" Grid.Column="0" Text="Entrada Vehículo" Clicked="OnEntradaVehiculoClicked"
            BackgroundColor="{StaticResource Green}" TextColor="White" CornerRadius="10" HeightRequest="60"/>
                <Button x:Name="btnMantenimiento" Grid.Row="0" Grid.Column="1" Text="Mantenimiento" Clicked="OnMantenimientoClicked"
            BackgroundColor="{StaticResource Orange}" TextColor="White" CornerRadius="10" HeightRequest="60"/>
            </Grid>

            <!-- Tercera fila: Ver Vehículos -->
            <Button x:Name="btnVerVehiculos" Text="Ver Vehículos" Clicked="OnVerVehiculosClicked"
                    BackgroundColor="{StaticResource Primary}" TextColor="White" CornerRadius="10" HeightRequest="60" Margin="0,10,0,0"/>
        </VerticalStackLayout>

        <Button x:Name="btnCerrarSesion" Grid.Row="3" Text="Cerrar Sesión" Clicked="OnCerrarSesionClicked"
                BackgroundColor="{StaticResource Red}" TextColor="White" CornerRadius="10" HeightRequest="50"
                HorizontalOptions="FillAndExpand" Margin="0,30,0,0"/>

    </Grid>
</ContentPage>