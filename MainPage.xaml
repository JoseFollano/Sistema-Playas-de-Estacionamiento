<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="sistemaPlaya.MainPage"
             Title="Principal - Playa de Estacionamiento"
             BackgroundColor="#FAFAFA">

    <Grid RowDefinitions="Auto, Auto, *, Auto" ColumnDefinitions="*" Padding="20">
        <!-- Encabezado reorganizado: avatar | usuario (nombre + fecha) | caja / estadísticas -->
        <Frame Grid.Row="0" BackgroundColor="#FFFFFF" CornerRadius="12" HasShadow="True" Padding="12" Margin="0,0,0,8">
            <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="16" VerticalOptions="Center">
                <!-- Avatar a la izquierda -->
                <Frame Grid.Column="0" WidthRequest="64" HeightRequest="64" CornerRadius="32" Padding="0" BackgroundColor="#E3F2FD" HasShadow="False" VerticalOptions="Center" HorizontalOptions="Start">
                    <Image Source="usuario_avatar.png" Aspect="AspectFill" />
                </Frame>

                <!-- Nombre del usuario y fecha, al lado del avatar -->
                <VerticalStackLayout Grid.Column="1" Spacing="2" VerticalOptions="Center" HorizontalOptions="Start">
                    <Label x:Name="UserNameLabel" Text="[Nombre del Usuario]" FontSize="20" FontAttributes="Bold" TextColor="#212121"/>
                    <Label x:Name="CurrentDateLabel" Text="[Fecha Actual]" FontSize="13" TextColor="#757575"/>
                </VerticalStackLayout>

                <!-- Estado de la caja y mini estadísticas a la derecha -->
                <VerticalStackLayout Grid.Column="2" Spacing="8" VerticalOptions="Center" HorizontalOptions="End">
                    <Frame BackgroundColor="#F5F5F5" CornerRadius="10" Padding="8,6" HasShadow="False" HorizontalOptions="End">
                        <HorizontalStackLayout Spacing="8" VerticalOptions="Center">
                            <BoxView x:Name="CajaStatusIndicator" WidthRequest="12" HeightRequest="12" CornerRadius="6" Color="#F44336" VerticalOptions="Center"/>
                            <Label x:Name="CajaAbiertaInfoLabel" Text="Caja: Cerrada" FontSize="13" FontAttributes="Bold" TextColor="#616161" VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                    </Frame>

                    <HorizontalStackLayout Spacing="12" HorizontalOptions="End">
                        <VerticalStackLayout Spacing="2" HorizontalOptions="End">
                            <Label Text="Total" FontSize="12" TextColor="#9E9E9E" HorizontalOptions="End"/>
                            <Label x:Name="TotalEstacionamientosLabel" Text="0" FontSize="16" FontAttributes="Bold" TextColor="#1976D2" HorizontalOptions="End"/>
                        </VerticalStackLayout>
                        <VerticalStackLayout Spacing="2" HorizontalOptions="End">
                            <Label Text="Ocupados" FontSize="12" TextColor="#9E9E9E" HorizontalOptions="End"/>
                            <Label x:Name="OcupadosLabel" Text="0" FontSize="16" FontAttributes="Bold" TextColor="#F44336" HorizontalOptions="End"/>
                        </VerticalStackLayout>
                        <VerticalStackLayout Spacing="2" HorizontalOptions="End">
                            <Label Text="Libres" FontSize="12" TextColor="#9E9E9E" HorizontalOptions="End"/>
                            <Label x:Name="DisponiblesLabel" Text="0" FontSize="16" FontAttributes="Bold" TextColor="#4CAF50" HorizontalOptions="End"/>
                        </VerticalStackLayout>
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Grid>
        </Frame>

        <BoxView Grid.Row="1" HeightRequest="2" Color="#E0E0E0" Margin="0,0,0,30" />

        <ScrollView Grid.Row="2" VerticalOptions="StartAndExpand" Margin="0,0,0,20">
            <VerticalStackLayout Spacing="25">
                <!-- Primera fila: Aperturar Caja - Cerrar Caja -->
                <Frame BackgroundColor="#F5F5F5" Padding="20" CornerRadius="15" HasShadow="True">
                    <Grid ColumnDefinitions="*,*" RowDefinitions="Auto" ColumnSpacing="15" RowSpacing="15">
                        <Button x:Name="btnAperturarCaja" Grid.Row="0" Grid.Column="0" Text="🔓 Aperturar Caja" Clicked="OnAperturarCajaClicked"
                                BackgroundColor="#03DAC6" TextColor="White" CornerRadius="12" HeightRequest="60" FontAttributes="Bold"/>
                        <Button x:Name="btnCerrarCaja" Grid.Row="0" Grid.Column="1" Text="🔒 Cerrar Caja" Clicked="OnCerrarCajaClicked"
                                BackgroundColor="#FF5722" TextColor="White" CornerRadius="12" HeightRequest="60" FontAttributes="Bold"/>
                    </Grid>
                </Frame>

                <!-- Segunda fila: Entrada Vehículo - Mantenimiento -->
                <Frame BackgroundColor="#F5F5F5" Padding="20" CornerRadius="15" HasShadow="True">
                    <Grid ColumnDefinitions="*,*" RowDefinitions="Auto" ColumnSpacing="15" RowSpacing="15">
                        <Button x:Name="btnEntradaVehiculo" Grid.Row="0" Grid.Column="0" Text="🚗 Entrada Vehículo" Clicked="OnEntradaVehiculoClicked"
                                BackgroundColor="#4CAF50" TextColor="White" CornerRadius="12" HeightRequest="60" FontAttributes="Bold"/>
                        <Button x:Name="btnMantenimiento" Grid.Row="0" Grid.Column="1" Text="🔧 Mantenimiento" Clicked="OnMantenimientoClicked"
                                BackgroundColor="#FF9800" TextColor="White" CornerRadius="12" HeightRequest="60" FontAttributes="Bold"/>
                    </Grid>
                </Frame>

                <!-- Tercera fila: Ver Vehículos -->
                <Frame BackgroundColor="#F5F5F5" Padding="20" CornerRadius="15" HasShadow="True">
                    <Button x:Name="btnVerVehiculos" Text="📋 Ver Vehículos" Clicked="OnVerVehiculosClicked"
                            BackgroundColor="#2196F3" TextColor="White" CornerRadius="12" HeightRequest="60" FontAttributes="Bold"/>
                </Frame>
            </VerticalStackLayout>  
        </ScrollView>

        <Frame Grid.Row="3" BackgroundColor="#F5F5F5" Padding="10" CornerRadius="12" HasShadow="True" Margin="0,20,0,0">
            <Button x:Name="btnCerrarSesion" Text="🚪 Cerrar Sesión" Clicked="OnCerrarSesionClicked"
                    BackgroundColor="#F44336" TextColor="White" CornerRadius="10" HeightRequest="45"
                    HorizontalOptions="FillAndExpand" FontAttributes="Bold"/>
        </Frame>

    </Grid>
</ContentPage>